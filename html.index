<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Axiona | Login</title>
  <meta name="description" content="Axiona secure login" />

  <!-- CSS -->
  <link rel="stylesheet" href="../css/styles.css" />
</head>

<body>
  <div class="noise" aria-hidden="true"></div>

  <main class="wrap">
    <section class="card" aria-label="Axiona login">
      <header class="brand">
        <!-- Update extension if needed: axionaLogo.svg / axionaLogo.png -->
        <img src="../assets/axionaLogo.png" alt="Axiona logo" />
        <h1>Welcome back</h1>
        <p>Sign in to access your Axiona workspace.</p>
      </header>

      <!-- Static login form (no backend; no signup) -->
      <form id="loginForm" action="#" method="post" autocomplete="on">
        <div class="field">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" placeholder="you@axiona.com" required />
        </div>

        <div class="field">
          <label for="password">Password</label>
          <input id="password" name="password" type="password" placeholder="••••••••••••" required />
        </div>

        <div class="row">
          <label class="checkbox">
            <input type="checkbox" name="remember" />
            Remember me
          </label>

          <a class="link" href="#" aria-label="Forgot password (placeholder link)">Forgot password?</a>
        </div>

        <button class="btn" type="submit">Log in</button>

        <div class="fineprint">
          This is a static demo login screen (no signup, no backend).
        </div>

        <!-- JS writes status text here -->
        <div class="form-error" aria-live="polite"></div>
      </form>
    </section>
  </main>

  <!-- JS -->
  <script src="../js/script.js" defer></script>
</body>
</html>
